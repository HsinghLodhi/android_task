<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MovesDetailsActivity">


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/tvMoviesName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movies Name"
            android:gravity="center_horizontal"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/tvActorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actor Name"
            android:layout_below="@+id/tvMoviesName"
            android:gravity="center_horizontal"
            android:textSize="18dp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/tvActressName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actress Name"
            android:layout_below="@+id/tvActorName"
            android:textSize="18dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

    <Button
      android:onClick="btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Update"/>

</RelativeLayout>